@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<a class="btn btn-primary" asp-page="Createuser">Add User</a>
<h1>Users</h1>
@foreach (var user in Model.UsersRoles)
{
    <div class="row">
        <div class="col-sm-4">
            <div class="card mb-3">
                <div class="card-header">
                    <div>User Name : @user.Id</div>
                    <div>User Email : @user.Email</div>
                </div>
                <div class="card-body">
                    @foreach (var userrole in user.UserRoles)
                    {
                        <h5 class="card-title">@userrole.Role.Name</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="Userrole" asp-route-id="@user.Id" class="btn btn-primary">Add Role</a>
                </div>
            </div>
        </div>
    </div>
}
